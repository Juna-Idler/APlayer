<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="APlayer.FolderSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:APlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
            <MenuFlyout x:Key="MenuFlyout">
            <MenuFlyoutItem Text="Delete" Click="MenuFlyoutItem_Delete_Click" />
            </MenuFlyout>
    </Page.Resources>
    

    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <ListView x:Name="FoldersView" Background="AliceBlue"
                  HorizontalAlignment="Stretch"
                  CanReorderItems="True" AllowDrop="True" SelectionMode="Single"
                  SelectionChanged="FoldersView_SelectionChanged">
            <ListView.ItemTemplate>
            <DataTemplate x:DataType="local:SavedFolder">
                    <Border BorderBrush="#888" BorderThickness="1" Margin="0,2" >
                        
                <Grid Margin="2" Padding="2" DoubleTapped="Folder_DoubleTapped" ContextFlyout="{StaticResource MenuFlyout}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Bind Name,Mode=OneWay}" Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="{x:Bind FontSize,Mode=OneWay}" />
                    <TextBlock Text="{x:Bind Path,Mode=OneTime}" Grid.Column="2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid VerticalAlignment="Stretch" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="PickFolderButton" Content="Add Folder" Grid.Column="0"
                    Click="PickFolderButton_Click" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="10" />
            
            <TextBlock x:Name="PickFolderOutputTextBlock" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Center">
            </TextBlock>
        </Grid>

    </Grid>

</Page>
