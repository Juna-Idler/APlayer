<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="APlayer.StartPage.TabFolderListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:APlayer.StartPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
            <MenuFlyout x:Key="MenuFlyout">
                <MenuFlyoutItem Text="Delete" Click="MenuFlyoutItem_Delete_Click" />
            </MenuFlyout>

        <Flyout x:Key="TabItemHeaderFlyout" Opened="TabHeaderFlyout_Opened">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Content="Rename" Click="RenameButton_Click"/>
                <TextBox x:Name="TabNameText" Grid.Row="0" Grid.Column="1" />
                <Button Grid.Row="1" Content="Delete" Click="DeleteButton_Click"/>
            </Grid>
        </Flyout>

    </UserControl.Resources>

    <TabView x:Name="TabView" TabItemsSource="{x:Bind TabFolderListItems}" SelectedIndex="{x:Bind SelectedIndex,Mode=TwoWay}" AddTabButtonClick="TabView_AddTabButtonClick">
        <TabView.TabItemTemplate>
            <DataTemplate x:DataType="local:TabFolderListItem">
                <TabViewItem IsClosable="False" ContextFlyout="{StaticResource TabItemHeaderFlyout}">
                    <TabViewItem.Header>
                        <TextBlock Text="{x:Bind Name,Mode=OneWay}"/>
                    </TabViewItem.Header>

                    <ListView HorizontalAlignment="Stretch" ItemsSource="{x:Bind Folders}" SelectedIndex="{x:Bind SelectedIndex,Mode=TwoWay}"
                              CanReorderItems="True" AllowDrop="True" SelectionMode="Single"
                              SelectionChanged="FoldersView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:SavedFolder">
                                <Border BorderBrush="#888" BorderThickness="1" Margin="0,2" >

                                    <Grid Margin="2" Padding="2" DoubleTapped="Folder_DoubleTapped" ContextFlyout="{StaticResource MenuFlyout}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{x:Bind Name,Mode=OneWay}" Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   FontSize="{x:Bind FontSize,Mode=OneWay}" />
                                        <TextBlock Text="{x:Bind Path,Mode=OneTime}" Grid.Column="2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>



                </TabViewItem>
            </DataTemplate>
        </TabView.TabItemTemplate>
    </TabView>
</UserControl>
