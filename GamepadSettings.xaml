        <FontIcon  Glyph="&#xf08d;" Grid.Row="8" Grid.Column="1"/>

        <FontIcon  Glyph="&#xf108;" Grid.Row="10" Grid.Column="1" />
        <FontIcon  Glyph="&#xf0ad;" Grid.Row="11" Grid.Column="1"/>
        <FontIcon  Glyph="&#xf0b0;" Grid.Row="12" Grid.Column="1"/>
        <FontIcon  Glyph="&#xf0af;" Grid.Row="13" Grid.Column="1"/>
        <FontIcon  Glyph="&#xf0ae;" Grid.Row="14" Grid.Column="1"/>


        <FontIcon  Glyph="&#xf10b;" Grid.Row="0" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf10d;" Grid.Row="1" Grid.Column="4"/>

        <FontIcon  Glyph="&#xf095;" Grid.Row="3" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf096;" Grid.Row="4" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf094;" Grid.Row="5" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf093;" Grid.Row="6" Grid.Column="4"/>

        <FontIcon  Glyph="&#xf08f;" Grid.Row="8" Grid.Column="4" />

        <FontIcon  Glyph="&#xf109;" Grid.Row="10" Grid.Column="4" />
        <FontIcon  Glyph="&#xf0ad;" Grid.Row="11" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf0b0;" Grid.Row="12" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf0af;" Grid.Row="13" Grid.Column="4"/>
        <FontIcon  Glyph="&#xf0ae;" Grid.Row="14" Grid.Column="4"/>


        <ComboBox Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch" />
        <ComboBox Grid.Row="0" Grid.Column="3" HorizontalAlignment="Stretch" />

        <ComboBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" />
        <ComboBox Grid.Row="1" Grid.Column="3" HorizontalAlignment="Stretch" />

        <ComboBox Grid.Row="3" Grid.Column="2" HorizontalAlignment="Stretch" />
        <ComboBox Grid.Row="3" Grid.Column="3" HorizontalAlignment="Stretch" />

        <ComboBox Grid.Row="4" Grid.Column="2" HorizontalAlignment="Stretch" />
